<% if current_user.fav_micropost?(micropost) %>
  <%= link_to "Unfavorite", favorite_path(id: micropost.id),  method: :delete,  class: 'btn btn-danger btn-sm' %> 
<% else %>
  <%= link_to "Favorite", favorites_path(micropost_id: micropost.id), method: :post, class: 'btn btn-primary btn-sm' %> 
<% end %>
